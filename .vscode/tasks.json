{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Copy oldConfig",
            "type": "shell",
            "command": "cp kern/conf/DUMBVM conf/${input:VersionName}",
            "problemMatcher": []
        },
        {
            "label": "./config nameNewConfig",
            "type": "shell",
            "command": "cd kern/conf/;./config ${input:VersionName}",
            "problemMatcher": []
        },
        {
            "label": "bmake depend",
            "type": "shell",
            "command": "cd kern/compile/${input:VersionName};bmake depend",
            "problemMatcher": []
        },
        {
            "label": "Build and Install (bmake, bmake install)",
            "type": "shell",
            "command": "cd kern/compile/${input:VersionName};bmake;bmake install",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run OS161 (debug)",
            "type": "shell",
            "command": "cd ${env:HOME}/os161/root;sys161 -w kernel",
            "problemMatcher": []
        },
        {
            "label": "Run OS161 (no debug)",
            "type": "shell",
            "command": "cd ${env:HOME}/os161/root;sys161 kernel",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "VersionName",
            "description": "Nome della versione"
        }
    ]
}